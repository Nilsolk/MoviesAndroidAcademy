<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="100dp"
    android:padding="5dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/actor_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@id/actor_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/_f8f5ec204f1a37e0e15e2a731ab190a" />

    <TextView
        android:id="@+id/actor_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/actor_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/actor_image"
        tools:text="@string/robert_downey_jr" />

</androidx.constraintlayout.widget.ConstraintLayout>